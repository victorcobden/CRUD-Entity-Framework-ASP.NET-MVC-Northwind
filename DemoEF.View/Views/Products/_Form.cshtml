@model DemoEF.Backend.Bussiness.BussinessEntities.Product
<div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    @Html.TextBoxFor(x => x.ProductID, new { @class = "mdl-textfield__input", @type = "number" })
    @Html.LabelFor(x => x.ProductID, new { @class = "mdl-textfield__label" })
</div>
<div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    @Html.TextBoxFor(x => x.ProductName, new { @class = "mdl-textfield__input"})
    @Html.LabelFor(x => x.ProductName, new { @class = "mdl-textfield__label" })
</div>
<div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "mdl-textfield__input", @type = "number", @step="any" })
    @Html.LabelFor(x => x.UnitPrice, new { @class = "mdl-textfield__label" })
</div>
<div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "mdl-textfield__input", @type = "number" })
    @Html.LabelFor(x => x.UnitsInStock, new { @class = "mdl-textfield__label" })
</div>
<div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    @Html.TextBoxFor(x => x.UnitsOnOrder, new { @class = "mdl-textfield__input", @type = "number" })
    @Html.LabelFor(x => x.UnitsOnOrder, new { @class = "mdl-textfield__label" })
</div>
